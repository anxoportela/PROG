package com.acarballeira.javaFX.ejemplo11.controlador;

import com.acarballeira.javaFX.ejemplo10.modelo.Suma;
import com.acarballeira.javaFX.ejemplo11.modelo.Operacion;
import com.sun.org.apache.xpath.internal.operations.Operation;

import javafx.event.ActionEvent;
import javafx.fxml.FXML;
import javafx.scene.control.Alert;
import javafx.scene.control.Alert.AlertType;
import javafx.scene.control.Button;
import javafx.scene.control.RadioButton;
import javafx.scene.control.TextField;

public class OperacionController {

	@FXML
	private Button btnOperacion;
	@FXML
	private TextField txtOp1;
	@FXML
	private TextField txtOp2;
	@FXML
	private TextField txtResultado;
	@FXML
	private RadioButton rdbSuma;
	@FXML
	private RadioButton rdbResta;
	@FXML
	private RadioButton rdbMult;
	@FXML
	private RadioButton rdbDivision;

	@FXML
	private void hacerOperacion(ActionEvent event) {
		
		Operacion op = new Operacion(txtOp1,txtOp2);

		try {
			int op1 = Integer.parseInt(this.txtOp1.getText());
			int op2 = Integer.parseInt(this.txtOp2.getText());
			
			if (rdbSuma.isSelected()) {
				this.txtResultado.setText(String.valueOf(op.sumar()));
			}

			Suma s = new Suma(op1, op2);
			int res = s.sumar();
			this.txtResultado.setText(String.valueOf(res));
		} catch (NumberFormatException e) {
			Alert alerta = new Alert(AlertType.ERROR);
			alerta.setHeaderText(null);
			alerta.setTitle("Error");
			alerta.setContentText("Formato incorrecto para la suma");
			alerta.showAndWait();
		} finally {
			this.txtOp1.setText("");
			this.txtOp2.setText("");
		}

	}

}
